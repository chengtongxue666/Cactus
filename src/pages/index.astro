<PageLayout meta={{ title: "主页" }}>
	{/* 新增音乐播放器模块 */}
	<section class="mb-16 mt-8 flex justify-center">
		<div class="w-full max-w-[298px] scale-90 sm:scale-100">
			<iframe
				frameborder="no"
				border="0"
				marginwidth="0"
				marginheight="0"
				width="100%"
				height="52"
				src="https//music.163.com/outchain/player?type=0&id=3224918761&auto=1&height=32"
				title="音乐播放器"
				class="rounded-lg shadow-lg"
			></iframe>
		</div>
	</section>

	<section aria-label="Blog post list">
		<h2 class="title mb-6 text-xl text-accent"><a href="/">最近文章</a></h2>
		<ul class="space-y-4" role="list">
			{allPostsByDate.map((p) => (
				<li class="grid gap-2 sm:grid-cols-[auto_1fr]">
					<PostPreview post={p} />
				</li>
			))}
		</ul>
		<h2 class="mt-7 grid gap-2 text-lg sm:grid-cols-[auto_1fr]">
			<a class="underline-offset-4 sm:hover:underline" href="/posts/">更多...</a>
		</h2>
	</section>

	{latestNotes.length > 0 && (
		<section class="mt-16">
			<h2 class="title mb-6 text-xl text-accent">
				<a href="/notes/">笔记</a>
			</h2>
			<ul class="space-y-4" role="list">
				{latestNotes.map((note) => (
					<li>
						<Note note={note} as="h3" isPreview />
					</li>
				))}
			</ul>
		</section>
	)}
</PageLayout>
